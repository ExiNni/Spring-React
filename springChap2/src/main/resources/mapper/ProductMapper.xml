<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.spring.mapper.ProductMapper">
	<select id="getAllProduct" resultType="com.kh.spring.model.Product">
        SELECT * FROM react_product
    </select>

    <insert id="insertProduct" parameterType="com.kh.spring.model.Product">
        INSERT INTO react_product (name, price, description) VALUES (#{name}, #{price}, #{description}) 
    </insert>

    <delete id="deleteProduct" parameterType="java.lang.Long">
        DELETE FROM react_product WHERE id = #{id} 
    </delete>
  
    <select id="getProductById" parameterType="java.lang.Long" resultType="com.kh.spring.model.Product">
        SELECT * FROM react_product WHERE id = #{id}
    </select>
  
    <update id="updateProduct" parameterType="com.kh.spring.model.Product">
        UPDATE react_product SET name = #{name}, price = #{price}, description = #{description} WHERE id = #{id}
    </update>
</mapper>
<!-- ProductMapper.xml -->